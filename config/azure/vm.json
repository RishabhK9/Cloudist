{
  "id": "vm",
  "name": "Virtual Machines",
  "icon": "üñ•Ô∏è",
  "category": "Compute",
  "description": "Cloud virtual machines",
  "terraformType": "azurerm_linux_virtual_machine",
  "defaultConfig": {
    "name": "",
    "vm_size": "Standard_B1s",
    "location": "East US",
    "admin_username": "azureuser"
  },
  "configSchema": {
    "name": {
      "type": "string",
      "label": "VM Name",
      "description": "The name of the virtual machine",
      "required": true
    },
    "vm_size": {
      "type": "select",
      "label": "VM Size",
      "description": "The size of the virtual machine",
      "options": ["Standard_B1s", "Standard_B2s", "Standard_D2s_v3", "Standard_D4s_v3", "Standard_F2s_v2"],
      "default": "Standard_B1s",
      "required": true
    },
    "location": {
      "type": "select",
      "label": "Location",
      "description": "The Azure region to deploy the VM",
      "options": ["East US", "West US 2", "Central US", "North Europe", "West Europe", "Southeast Asia"],
      "default": "East US",
      "required": true
    },
    "admin_username": {
      "type": "string",
      "label": "Admin Username",
      "description": "The administrator username for the VM",
      "default": "azureuser",
      "required": true
    },
    "admin_password": {
      "type": "string",
      "label": "Admin Password",
      "description": "The administrator password for the VM",
      "required": true
    },
    "os_disk_type": {
      "type": "select",
      "label": "OS Disk Type",
      "description": "The type of OS disk",
      "options": ["Standard_LRS", "Premium_LRS", "StandardSSD_LRS"],
      "default": "Standard_LRS",
      "required": true
    },
    "disk_size_gb": {
      "type": "number",
      "label": "Disk Size (GB)",
      "description": "The size of the OS disk in GB",
      "default": 30,
      "validation": {
        "min": 30,
        "max": 4095
      }
    }
  }
}
