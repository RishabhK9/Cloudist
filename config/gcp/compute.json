{
  "id": "compute",
  "name": "Compute Engine",
  "icon": "üñ•Ô∏è",
  "category": "Compute",
  "description": "Virtual machines",
  "terraformType": "google_compute_instance",
  "defaultConfig": {
    "name": "",
    "machine_type": "e2-micro",
    "zone": "us-central1-a",
    "image": "debian-cloud/debian-11"
  },
  "configSchema": {
    "name": {
      "type": "string",
      "label": "Instance Name",
      "description": "The name of the compute instance",
      "required": true
    },
    "machine_type": {
      "type": "select",
      "label": "Machine Type",
      "description": "The machine type for the instance",
      "options": ["e2-micro", "e2-small", "e2-medium", "e2-standard-2", "e2-standard-4", "e2-standard-8"],
      "default": "e2-micro",
      "required": true
    },
    "zone": {
      "type": "select",
      "label": "Zone",
      "description": "The zone to deploy the instance in",
      "options": ["us-central1-a", "us-central1-b", "us-east1-a", "us-east1-b", "europe-west1-a", "europe-west1-b"],
      "default": "us-central1-a",
      "required": true
    },
    "image": {
      "type": "select",
      "label": "Boot Disk Image",
      "description": "The boot disk image for the instance",
      "options": ["debian-cloud/debian-11", "ubuntu-os-cloud/ubuntu-2004-lts", "centos-cloud/centos-7", "windows-cloud/windows-2019"],
      "default": "debian-cloud/debian-11",
      "required": true
    },
    "disk_size": {
      "type": "number",
      "label": "Disk Size (GB)",
      "description": "The size of the boot disk in GB",
      "default": 20,
      "validation": {
        "min": 10,
        "max": 65536
      }
    },
    "preemptible": {
      "type": "boolean",
      "label": "Preemptible",
      "description": "Create a preemptible instance",
      "default": false
    }
  }
}
