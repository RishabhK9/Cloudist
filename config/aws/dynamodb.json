{
  "id": "dynamodb",
  "name": "DynamoDB",
  "icon": "/aws/Arch_Amazon-DynamoDB_64.svg",
  "category": "Database",
  "description": "NoSQL database service",
  "terraformType": "aws_dynamodb_table",
  "defaultConfig": {
    "table_name": "",
    "billing_mode": "PAY_PER_REQUEST",
    "hash_key": "id",
    "range_key": ""
  },
  "configSchema": {
    "table_name": {
      "type": "string",
      "label": "Table Name",
      "description": "The name of the DynamoDB table",
      "required": true
    },
    "billing_mode": {
      "type": "select",
      "label": "Billing Mode",
      "description": "The billing mode for the table",
      "options": ["PAY_PER_REQUEST", "PROVISIONED"],
      "default": "PAY_PER_REQUEST",
      "required": true
    },
    "hash_key": {
      "type": "string",
      "label": "Hash Key",
      "description": "The primary key attribute name",
      "default": "id",
      "required": true
    },
    "range_key": {
      "type": "string",
      "label": "Range Key",
      "description": "The sort key attribute name (optional)",
      "required": false
    },
    "read_capacity": {
      "type": "number",
      "label": "Read Capacity Units",
      "description": "Read capacity units (only for PROVISIONED billing)",
      "default": 5,
      "validation": {
        "min": 1,
        "max": 40000
      }
    },
    "write_capacity": {
      "type": "number",
      "label": "Write Capacity Units",
      "description": "Write capacity units (only for PROVISIONED billing)",
      "default": 5,
      "validation": {
        "min": 1,
        "max": 40000
      }
    },
    "point_in_time_recovery": {
      "type": "boolean",
      "label": "Point-in-Time Recovery",
      "description": "Enable point-in-time recovery",
      "default": false
    },
    "stream_enabled": {
      "type": "boolean",
      "label": "Enable DynamoDB Streams",
      "description": "Enable DynamoDB Streams",
      "default": false
    }
  }
}
