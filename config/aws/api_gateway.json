{
  "id": "api_gateway",
  "name": "API Gateway",
  "icon": "/aws/Arch_Amazon-API-Gateway_64.svg",
  "category": "Network",
  "description": "API management service",
  "terraformType": "aws_api_gateway_rest_api",
  "defaultConfig": {
    "name": "api",
    "description": "REST API",
    "endpoint_configuration": "REGIONAL"
  },
  "configSchema": {
    "name": {
      "type": "string",
      "label": "API Name",
      "description": "The name of the API Gateway",
      "required": true
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Description of the API",
      "default": "REST API"
    },
    "endpoint_configuration": {
      "type": "select",
      "label": "Endpoint Configuration",
      "description": "The endpoint configuration type",
      "options": ["REGIONAL", "EDGE", "PRIVATE"],
      "default": "REGIONAL"
    },
    "binary_media_types": {
      "type": "string",
      "label": "Binary Media Types",
      "description": "Comma-separated list of binary media types",
      "required": false
    },
    "minimum_compression_size": {
      "type": "number",
      "label": "Minimum Compression Size",
      "description": "Minimum response size to compress",
      "default": -1
    }
  }
}
