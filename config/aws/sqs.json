{
  "id": "sqs",
  "name": "Simple Queue Service",
  "icon": "/aws/Arch_Amazon-Simple-Queue-Service_64.svg",
  "category": "Application Integration",
  "description": "Message queuing service",
  "terraformType": "aws_sqs_queue",
  "defaultConfig": {
    "name": "my-queue",
    "fifo_queue": false,
    "content_based_deduplication": false,
    "delay_seconds": 0,
    "max_message_size": 262144,
    "message_retention_seconds": 345600,
    "receive_wait_time_seconds": 0,
    "visibility_timeout_seconds": 30,
    "dead_letter_queue": false,
    "max_receive_count": 3,
    "kms_master_key_id": "",
    "kms_data_key_reuse_period_seconds": 300
  },
  "configSchema": {
    "name": {
      "type": "string",
      "label": "Queue Name",
      "description": "The name of the SQS queue",
      "required": true,
      "validation": { "pattern": "^[a-zA-Z0-9_-]*$" }
    },
    "visibility_timeout_seconds": {
      "type": "number",
      "label": "Visibility Timeout (seconds)",
      "description": "Time a message stays hidden after being received",
      "default": 30,
      "required": true,
      "validation": { "min": 0, "max": 43200 }
    },
    "message_retention_seconds": {
      "type": "number",
      "label": "Message Retention (seconds)",
      "description": "Retention period (max 14 days = 1209600 seconds)",
      "default": 345600,
      "required": true,
      "validation": { "min": 60, "max": 1209600 }
    },
    "delay_seconds": {
      "type": "number",
      "label": "Delay Seconds",
      "description": "Delay delivery of all messages",
      "default": 0,
      "required": true,
      "validation": { "min": 0, "max": 900 }
    },
    "receive_wait_time_seconds": {
      "type": "number",
      "label": "Receive Wait Time (seconds)",
      "description": "Long polling wait time",
      "default": 0,
      "required": false,
      "validation": { "min": 0, "max": 20 }
    },
    "max_message_size": {
      "type": "number",
      "label": "Max Message Size (bytes)",
      "description": "Reject messages larger than this size",
      "default": 262144,
      "required": false,
      "validation": { "min": 1024, "max": 262144 }
    },
    "fifo_queue": {
      "type": "boolean",
      "label": "FIFO Queue",
      "description": "Enable First-In-First-Out behavior (requires .fifo name suffix)",
      "default": false
    },
    "content_based_deduplication": {
      "type": "boolean",
      "label": "Content-Based Deduplication",
      "description": "For FIFO queues: dedupe by message body hash",
      "default": false
    },
    "dead_letter_queue": {
      "type": "boolean",
      "label": "Enable Dead Letter Queue",
      "description": "Configure a DLQ via redrive policy",
      "default": false
    },
    "max_receive_count": {
      "type": "number",
      "label": "Max Receive Count",
      "description": "Times a message can be received before moving to DLQ",
      "default": 3,
      "required": false,
      "validation": { "min": 1, "max": 1000 }
    },
    "kms_master_key_id": {
      "type": "string",
      "label": "KMS Master Key ID",
      "description": "CMK ID or alias for SSE",
      "required": false
    },
    "kms_data_key_reuse_period_seconds": {
      "type": "number",
      "label": "KMS Data Key Reuse (seconds)",
      "description": "Reuse period for data keys",
      "default": 300,
      "required": false,
      "validation": { "min": 60, "max": 86400 }
    }
  }
}
