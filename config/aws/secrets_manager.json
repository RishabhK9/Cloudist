{
  "id": "secrets_manager",
  "name": "Secrets Manager",
  "icon": "/aws/Arch_AWS-Secrets-Manager_64.svg",
  "category": "Security",
  "description": "Secrets management service",
  "terraformType": "aws_secretsmanager_secret",
  "defaultConfig": {
    "name": "application-secret",
    "description": "Application secret",
    "recovery_window_in_days": 30
  },
  "configSchema": {
    "name": {
      "type": "string",
      "label": "Secret Name",
      "description": "The name of the secret",
      "required": true
    },
    "description": {
      "type": "string",
      "label": "Description",
      "description": "Description of the secret",
      "default": "Application secret"
    },
    "recovery_window_in_days": {
      "type": "number",
      "label": "Recovery Window (days)",
      "description": "Number of days to retain secret after deletion",
      "default": 30,
      "validation": {
        "min": 0,
        "max": 30
      }
    },
    "kms_key_id": {
      "type": "string",
      "label": "KMS Key ID",
      "description": "KMS key for secret encryption",
      "required": false
    },
    "tags": {
      "type": "string",
      "label": "Tags",
      "description": "JSON string of tags to apply",
      "required": false
    }
  }
}
