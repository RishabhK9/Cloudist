{
  "id": "auth",
  "name": "Authentication",
  "icon": "/supabase/auth.svg",
  "category": "Authentication",
  "description": "User authentication and authorization service",
  "terraformType": "",
  "defaultConfig": {
    "project_name": "cloudist-auth",
    "providers": ["email", "google", "github"],
    "email_confirmation": true,
    "password_min_length": 8,
    "jwt_expiry": "3600",
    "enable_signup": true,
    "enable_mfa": false
  },
  "configSchema": {
    "project_name": {
      "type": "string",
      "label": "Project Name",
      "description": "Name of your Supabase auth project",
      "required": true,
      "validation": {
        "pattern": "^[a-z0-9-]+$"
      }
    },
    "providers": {
      "type": "multiselect",
      "label": "Auth Providers",
      "description": "Authentication providers to enable",
      "options": ["email", "google", "github", "facebook", "twitter", "apple"],
      "default": ["email"],
      "required": true
    },
    "email_confirmation": {
      "type": "boolean",
      "label": "Email Confirmation",
      "description": "Require email confirmation for new signups",
      "default": true,
      "required": false
    },
    "password_min_length": {
      "type": "number",
      "label": "Minimum Password Length",
      "description": "Minimum length for user passwords",
      "default": 8,
      "validation": {
        "min": 6,
        "max": 128
      },
      "required": true
    },
    "jwt_expiry": {
      "type": "string",
      "label": "JWT Expiry (seconds)",
      "description": "How long JWT tokens are valid",
      "default": "3600",
      "required": true
    },
    "enable_signup": {
      "type": "boolean",
      "label": "Enable Signup",
      "description": "Allow new user registrations",
      "default": true,
      "required": false
    },
    "enable_mfa": {
      "type": "boolean",
      "label": "Enable MFA",
      "description": "Enable multi-factor authentication",
      "default": false,
      "required": false
    }
  }
}

